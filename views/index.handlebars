<header>
    <h1>Eat Da Burger</h1>
</header>
<div class="order-container">

    <h2>Order a burger here!</h2><br>
    <img src="/assets/img/Whopper.jpg" id="burger-img" alt="Burger">

    <form class="create-form">

        <div class="form-group">
            <label for="burger_name">Burger Name</label><br>
            <input type="text" id="burger_name" name="name">
        </div><br>
        <button type="submit" id="order-button">Order burger</button>
    </form>
</div>

<div class="main-container">
    
    

    <div class="devoured-container">
        <h2 class="devoured-h2">Devoured Burger</h2>
    </div>
    <div class="undevoured-container">
        <h2 class="undevoured-h2">Ordered Burger</h2>
    </div>

    {{#each burgers}}
    {{#if devoured}} {{!-- {{#unless devoured}}   --}}

    <script>
        var newDevourITem = "<div class='devoured-box'>{{burger_name}} by {{joinCustomer.customer_name}}</div><br>"
        $(".devoured-container").append(newDevourITem);
    </script>
    {{!-- <div class="devoured-box">{{burger_name}} ==>DEVOURED</div><br> --}}

    {{else}}
    <script>
        var newUnDevourITem = "<div class='burger-box'>{{burger_name}} "
            + "<input type='text' id='customer_name' name='name' placeholder='{{joinCustomer.customer_name}}'>"
            + "<button type='submit' class='devour-button' data-id='{{id}}' data-newdevour='{{devour}}'>devour</button></div><br>";
        $(".undevoured-container").append(newUnDevourITem);
    </script>

    {{!-- <div class="burger-box">{{burger_name}} <button type="submit" class="devour-button" data-id="{{id}}"
            data-newdevour="{{devour}}">devour</button></div><br> --}}

    {{/if}}
    {{/each}}

</div>